<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.2"
            >
    <TextView
        android:id="@+id/tv_dist_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_map"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="DISTRIBUTION CENTER 1"
        android:textColor="@color/lineColor"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_dist_center_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dist_center"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Rua General Ozaria, 61 - Centro - Jundiai SP"
        android:textColor="@color/grey"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/linear_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:layout_below="@+id/tv_dist_center_name"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:orientation="horizontal"
            android:layout_weight="0.2"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/linear_calender"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_weight="1"
                android:gravity="center_vertical"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_calender"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/calender_icon_green" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:text="04/01/2017"
                    android:textSize="12sp"
                    android:textColor="@color/lineColor" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_clock"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/clock_icon_green" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="07 Hours"
                    android:textSize="12sp"
                    android:textColor="@color/lineColor" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/linear_units"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_units"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/units_icon_green" />

                <TextView
                    android:id="@+id/tv_units"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="15 Und."
                    android:textSize="12sp"
                    android:textColor="@color/lineColor" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_side"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_dist_center_name"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:orientation="horizontal"
            android:layout_weight="0.8"
            >

            <LinearLayout
                android:id="@+id/linear_waze"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@color/black"
                    android:gravity="center"
                    android:padding="5dp"
                    >



                    <ImageView
                        android:id="@+id/iv_green"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/green_cir"/>
                    <ImageView
                        android:id="@+id/iv_line"
                        android:layout_below="@+id/iv_green"
                        android:layout_width="3dp"
                        android:layout_marginTop="-2dp"
                        android:layout_marginBottom="-2dp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:src="@drawable/cir_line"/>
                    <ImageView
                        android:id="@+id/iv_orange"
                        android:layout_below="@id/iv_line"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/orange_cir"/>

                    <TextView
                        android:id="@+id/tv_time_green"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_green"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:text="06h20"
                        android:textColor="@color/grey" />
                    <TextView
                        android:id="@+id/tv_time_orange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_orange"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:text="06h20"
                        android:layout_below="@id/iv_line"
                        android:textColor="@color/grey" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_waze"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:text="WAZE"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:background="@color/txtColor"
                    android:textSize="@dimen/_16sdp"
                    android:drawableTop="@drawable/waze_black"
                    android:textColor="@color/lineColor" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_collect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="COLLECTED"
                android:paddingTop="20dp"
                android:visibility="gone"
                android:paddingBottom="20dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:background="@color/txtColor"
                android:textSize="@dimen/_9sdp"
                android:drawableTop="@drawable/tick_white"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_Checkin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="CHECK-IN AND COLLECT"
                android:paddingTop="20dp"
                android:visibility="visible"
                android:paddingBottom="20dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:background="@color/barcolor"
                android:textSize="@dimen/_9sdp"
                android:drawableTop="@drawable/check_in_new"
                android:textColor="@color/white" />

        </LinearLayout>

        </LinearLayout>
</LinearLayout>