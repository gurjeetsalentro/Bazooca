<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_schedule"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.bazooca.bazooca.NewScheduleActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/barcolor">

        <!-- The ActionBar displayed at the top -->
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_280sdp">
                <LinearLayout
                    android:id="@+id/linear_top"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_210sdp"
                    android:orientation="horizontal"
                    android:background="@color/white"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_below="@+id/linear_top"
                        />

                <FrameLayout
                    android:id="@+id/frame"
                    android:layout_width="@dimen/_125sdp"
                    android:layout_height="@dimen/_125sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:src="@drawable/pic"
                        />
                    <ImageView
                        android:id="@+id/iv_frame"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:src="@drawable/circle_bg"
                        android:visibility="gone"
                        />
                </FrameLayout>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_driver_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative"
                    android:padding="10dp"
                    android:text="JOAO PEREIERA"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18sdp"
                    android:gravity="center"
                    android:singleLine="true"
                    />
                <TextView
                    android:id="@+id/tv_vehicle_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_driver_name"
                    android:padding="10dp"
                    android:layout_centerHorizontal="true"
                    android:text="Hyundai Hr Bau Ano 2012"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_16sdp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/truck_icon_green"
                    />

                <LinearLayout
                    android:id="@+id/linear_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_below="@+id/tv_vehicle_info"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:background="@color/barcolor"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/linear_deliveries"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_deliveries_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="300"
                            android:singleLine="true"
                            android:textSize="@dimen/_18sdp"
                            android:textColor="@color/grey" />


                        <TextView
                            android:id="@+id/tv_deliveries"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:textSize="@dimen/_16sdp"
                            android:text="DELIVERIES"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/lineColor" />

                    <LinearLayout
                        android:id="@+id/linear_checked"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_checked_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="280"
                            android:singleLine="true"
                            android:textSize="@dimen/_18sdp"
                            android:textColor="@color/grey" />


                        <TextView
                            android:id="@+id/tv_checked"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:textSize="@dimen/_16sdp"
                            android:text="CHECKED"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/lineColor" />

                    <LinearLayout
                        android:id="@+id/linear_5Stars"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_5Stars_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="250"
                            android:singleLine="true"
                            android:textSize="@dimen/_18sdp"
                            android:textColor="@color/grey" />


                        <TextView
                            android:id="@+id/tv_5Stars"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:textSize="@dimen/_16sdp"
                            android:text="5 STARS"
                            android:textColor="@color/white" />
                    </LinearLayout>


                </LinearLayout>


                <!--<Button-->
                    <!--android:id="@+id/btn_accept"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="70dp"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:layout_below="@+id/linear_top"-->
                    <!--android:layout_gravity="bottom"-->
                    <!--android:background="@color/txtColor"-->
                    <!--android:drawableRight="@drawable/right_arrow"-->
                    <!--android:paddingRight="15dp"-->
                    <!--android:text="ACCEPT SCHEDULE"-->
                    <!--android:textColor="@color/white"-->
                    <!--android:textSize="20sp" />-->
            </RelativeLayout>
        </ScrollView>


    </RelativeLayout>
</RelativeLayout>
